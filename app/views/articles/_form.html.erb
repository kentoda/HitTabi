<%= form_for(@article) do |f| %>

<% if @article.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="post-field">
    <%= f.label :"タイトル" %><br>
    <%= f.text_field :title, required: true, size:"35px", class: "title",placeholder:"5文字以上25文字以内" %>
</div>


<div class="post-field">
    <%= f.label :"本文" %><br>
    <%= f.text_area :content,'data-provider': :summernote %>
</div>

<div class="post-field">
    <%= f.label :"タグ" %><br>
     <%= f.text_field :hashbody, size:"55x3",placeholder:"#タグは4つまでつけられます #タグ一つの文字数は5文字以内" %>
</div>
  


<div class="post-field">
     <%= f.select :status, [["下書き", false],["公開", true]] %>
</div> 

<div class="actions">
    <%= f.submit %>
</div>

<% end %>