<%= form_for(@article) do |f| %>

<div class="field">
    <%= f.label :"タイトル" %><br>
    <%= f.text_field :title, required: true %>
</div>

<!-- <div class="field"> -->
    <%#= f.label :"国名" %><!-- <br> -->
    <%#= f.text_field :country, required: true %>
<!-- </div> -->
  


<div class="field">
    <%= f.label :"本文" %><br>
    <%= f.text_area :content,'data-provider': :summernote %>
</div>

<div class="field">
     <%= f.select :status, [["下書き", "1"],["公開", "0"]] %>
</div> 

<div class="actions">
    <%= f.submit %>
</div>

<% end %>