<div id="h">
<div class="container">
    <div class="tag-index">
  	   <div class="row">
          <% if params[:name] == nil %>
          <% else %>
            <% @articles.each do |article| %>
              <div class="col-lg-3 team">
                <%= attachment_image_tag article.user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
                  <h4><%= article.user.name %></h4>
                  <h5><%= article.user.job %></h5>
                  <strong><%=link_to "#{article.title}", article_path(article.id) %></strong>
                    
                  <p><%= render_with_tags(article.hashbody) %></p>
              </div>
            <% end %>
          <% end %>  
       </div>
    </div>
</div>
<div class="paginate"><%= paginate @articles %></div>
</div>
      