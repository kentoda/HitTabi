<div class="form">
  <h2 class="form-title">ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div id="error_explanation"><%- flash.each do |name, msg| -%>
           <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
           <%- end -%>
  </div>  
  <div class="field">
    <%= f.label :ニックネーム %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name",class: :form_label %>
  </div>

  <div class="field">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "current-password",class: :form_label %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :次回から自動的にログインする %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン",:class => "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
