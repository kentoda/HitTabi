
<h2>プロフィール</h2>
<%= form_for(@user_profile) do |f| %>


    <%= attachment_image_tag @user_profile, :image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "logo.png"%>
  <%= f.attachment_field :image, placeholder: "プロフィール画像", class: "user-edit-form" %>


<div class="field">
    <%= f.label :"年齢" %><br>
    <%= f.text_field :age, required: true, size:3 %>
</div>

<div class="field">
    <%= f.label :"仕事" %><br>
    <%= f.text_field :job, required: true %>
</div>
  


<div class="field">
    <%= f.label :"自己紹介" %><br>
    <%= f.text_area :introduction, required: true %>
</div>


<div class="actions">
    <%= f.submit %>
</div>

<% end %>