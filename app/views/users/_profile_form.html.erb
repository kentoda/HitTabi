<div class="container">
<h2>プロフィール</h2>
<%= form_for(@user, url: {controller:"users", action:"update"},method: :patch) do |f| %>

<div class="profile_image">
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "logo.png"%>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
</div>

<div class="post-field">
    <%= f.label :"年齢" %><br>
    <%= f.text_field :age, required: true, size:3 %>
</div>

<div class="post-field">
    <%= f.label :"仕事" %><br>
    <%= f.text_field :job, required: true %>
</div>
  


<div class="post-field">
    <%= f.label :"自己紹介" %><br>
    <%= f.text_area :introduction, required: true %>
</div>


<div class="actions">
    <%= f.submit %>
</div>

<% end %>
</div>
</div>